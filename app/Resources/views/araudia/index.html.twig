{% extends 'base.html.twig' %}

{% block menua %}
    {{ parent() }}
<nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand">Araudiak</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse navbar-right">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('araudia_new') }}" class="fa fa-plus"> Arau berria</a></li>
            </ul>
        </div>
    </div>
</nav>
{% endblock %}


{% block body %}
    {#<h1>Araudiak</h1>#}

    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Araua</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for araudium in araudias %}
            <tr>
                {#<td><a href="{{ path('araudia_show', { 'id': araudium.id }) }}">{{ araudium.kodea }}</a></td>#}
                {#<td><a href="{{ path('araudia_edit', { 'id': araudium.id }) }}">{{ araudium.kodea }}</a></td>#}
                <td>{{ araudium.kodea }}</td>
                <td>{{ araudium.arauaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li><a href="{{ path('araudia_edit', { 'id': araudium.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            {#<li>{{ form_start(deleteforms[araudium.id],{'attr': {'id': araudium.id}}) }}#}
                                {#<a href="#" onclick="document.getElementById({{ araudium.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>#}
                                {#{{ form_end(deleteforms[araudium.id]) }}</li>#}
                            <li>{{ form_start(deleteforms[araudium.id],{'attr': {'id': araudium.id}}) }}
                                <a href="#" onclick="ezabatu({{ araudium.id }});" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[araudium.id]) }}</li>

                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        {% if araudias is not empty %}
            {% if pager.haveToPaginate %}
                {{ pagerfanta(pager, 'twitter_bootstrap3_translated', {'routeName': 'araudia_index_paginated'}) }}
            {% endif %}
        {% else %}
            <p>Ez da emaitzarik topatu</p>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function ezabatu (id)
        {
            var r = confirm("Araua EZABATU. Ziur zaude?");
            if (r == true)
            {
                document.getElementById(id).submit()
            }else
            {
            }
        };
    </script>
{% endblock %}
