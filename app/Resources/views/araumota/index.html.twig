{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Arau-motak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('araumota_new') }}" class="fa fa-plus"> Arau-mota berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    {#<h1>Arau-motak</h1>#}

    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Motaeu</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for araumotum in araumotas %}
            <tr>
                <td>{{ araumotum.kodea }}</td>
                <td>{{ araumotum.motaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li><a href="{{ path('araumota_edit', { 'id': araumotum.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            {#<li>{{ form_start(deleteforms[araumotum.id],{'attr': {'id': araumotum.id}}) }}#}
                                {#<a href="#" onclick="document.getElementById({{ araumotum.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>#}
                                {#{{ form_end(deleteforms[araumotum.id]) }}</li>#}
                            <li>{{ form_start(deleteforms[araumotum.id],{'attr': {'id': araumotum.id}}) }}
                                <a href="#" onclick="ezabatu({{ araumotum.id }});" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[araumotum.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        {% if araumotas is not empty %}
            {% if pager.haveToPaginate %}
                {{ pagerfanta(pager, 'twitter_bootstrap3_translated', {'routeName': 'araumota_index_paginated'}) }}
            {% endif %}
        {% else %}
            <p>Ez da emaitzarik topatu</p>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function ezabatu (id)
        {
            var r = confirm("Arau-mota EZABATU. Ziur zaude?");
            if (r == true)
            {
                document.getElementById(id).submit()
            }else
            {
            }
        };
    </script>
{% endblock %}