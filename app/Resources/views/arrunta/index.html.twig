{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Epe-Arruntak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('arrunta_new') }}" class="fa fa-plus"> Epe berria sortu</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<th>Udala</th>{% endif %}
                <th>Epea</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for arruntum in arruntas %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<td>{{ arruntum.udala }}</td>{% endif %}
                <td>{{ arruntum.epeaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('arrunta_edit', { 'id': arruntum.id }) }}"  class="fa fa-pencil"></a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            {#<li>{{ form_start(deleteforms[arruntum.id],{'attr': {'id': arruntum.id}}) }}#}
                                {#<a href="#" onclick="document.getElementById({{ arruntum.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>#}
                                {#{{ form_end(deleteforms[arruntum.id]) }}</li>#}
                            <li>{{ form_start(deleteforms[arruntum.id],{'attr': {'id': arruntum.id}}) }}
                                <a href="#" onclick="ezabatu({{ arruntum.id }});" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[arruntum.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        {% if arruntas is not empty %}
            {% if pager.haveToPaginate %}
                {{ pagerfanta(pager, 'twitter_bootstrap3_translated', {'routeName': 'arrunta_index_paginated'}) }}
            {% endif %}
        {% else %}
            <p>Ez da emaitzarik topatu</p>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function ezabatu (id)
        {
            var r = confirm("Epea EZABATU. Ziur zaude?");
            if (r == true)
            {
                document.getElementById(id).submit()
            }else
            {
            }
        };
    </script>
{% endblock %}
