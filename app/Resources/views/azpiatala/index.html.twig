{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Kostu Taulak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('azpiatala_new') }}" class="fa fa-plus"> Kostu-taula berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}


{% block body %}
    <table class="table">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<th>Udala</th>{% endif %}
                <th>Kodea</th>
                <th>Izenburuaeu</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for azpiatala in azpiatalas %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<td>{{ azpiatala.udala }}</td>{% endif %}
                {#<td><a href="{{ path('azpiatala_show', { 'id': azpiatala.id }) }}">{{ azpiatala.kodea }}</a></td>#}
                <td>{{ azpiatala.kodea }}</td>

                <td>{{ azpiatala.izenburuaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('azpiatala_show', { 'id': azpiatala.id }) }}" class="fa fa-search"></a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>{{ form_start(deleteforms[azpiatala.id],{'attr': {'id': azpiatala.id}}) }}
                                <a href="#" onclick="document.getElementById({{ azpiatala.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[azpiatala.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
