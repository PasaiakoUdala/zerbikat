{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Azpi-sailak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('azpisaila_new') }}" class="fa fa-plus"> Azpi-saila berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    {#<h1>Azpi-sailak</h1>#}
    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Azpisaila</th>
                <th>Arduraduna</th>
                <th>Kontaktua</th>
                <th>Helbidea</th>
            </tr>
        </thead>
        <tbody>
        {% for azpisaila in azpisailas %}
            <tr>
                {#<td><a href="{{ path('azpisaila_edit', { 'id': azpisaila.id }) }}">{{ azpisaila.kodea }}</a></td>#}
                <td>{{ azpisaila.kodea }}</td>
                <td>{{ azpisaila.hizkia }}-{{ azpisaila.azpisailaeu }}</td>
                <td>{{ azpisaila.arduraduna }}</td>
                <td>{% if azpisaila.email %}{{ azpisaila.email }}<br/>{% endif %}
                    {% if azpisaila.telefonoa %}{{ azpisaila.telefonoa }}<br/>{% endif %}
                    {% if azpisaila.fax %}{{ azpisaila.fax }}<br/>{% endif %}
                    {% if azpisaila.ordutegia %}{{ azpisaila.ordutegia }}{% endif %}
                <td>{{ azpisaila.kalea }} {{ azpisaila.kaleZbkia }}, {{ azpisaila.barrutia }}<br/>
                    {{ azpisaila.eraikina }}
                </td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li><a href="{{ path('azpisaila_edit', { 'id': azpisaila.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            {#<li>{{ form_start(deleteforms[azpisaila.id],{'attr': {'id': azpisaila.id}}) }}#}
                                {#<a href="#" onclick="document.getElementById({{ azpisaila.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>#}
                                {#{{ form_end(deleteforms[azpisaila.id]) }}</li>#}
                            <li>{{ form_start(deleteforms[azpisaila.id],{'attr': {'id': azpisaila.id}}) }}
                                <a href="#" onclick="ezabatu({{ azpisaila.id }});" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[azpisaila.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        {% if azpisailas is not empty %}
            {% if pager.haveToPaginate %}
                {{ pagerfanta(pager, 'twitter_bootstrap3_translated', {'routeName': 'azpisaila_index_paginated'}) }}
            {% endif %}
        {% else %}
            <p>Ez da emaitzarik topatu</p>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function ezabatu (id)
        {
            var r = confirm("Azpi-saila EZABATU. Ziur zaude?");
            if (r == true)
            {
                document.getElementById(id).submit()
            }else
            {
            }
        };
    </script>
{% endblock %}