{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Baldintzak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('baldintza_new') }}" class="fa fa-plus"> Baldintza berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}


{% block body %}
    <table class="table">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<th>Udala</th>{% endif %}
                <th>Baldintzaeu</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for baldintza in baldintzas %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<td>{{ baldintza.udala }}</td>{% endif %}
                <td>{{ baldintza.baldintzaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li><a href="{{ path('baldintza_edit', { 'id': baldintza.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>{{ form_start(deleteforms[baldintza.id],{'attr': {'id': baldintza.id}}) }}
                                <a href="#" onclick="document.getElementById({{ baldintza.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[baldintza.id]) }}</li>
                        {% endif %}

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
