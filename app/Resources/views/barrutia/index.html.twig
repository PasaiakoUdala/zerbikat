{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Barrutiak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('barrutia_new') }}" class="fa fa-plus"> Barruti berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Izena</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for barrutium in barrutias %}
            <tr>
                <td>{{ barrutium.izena }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li><a href="{{ path('barrutia_edit', { 'id': barrutium.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            {#<li>{{ form_start(deleteforms[barrutium.id],{'attr': {'id': barrutium.id}}) }}#}
                                {#<a href="#" onclick="document.getElementById({{ barrutium.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>#}
                                {#{{ form_end(deleteforms[barrutium.id]) }}</li>#}
                            <li>{{ form_start(deleteforms[barrutium.id],{'attr': {'id': barrutium.id}}) }}
                                <a href="#" onclick="ezabatu({{ barrutium.id }});" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[barrutium.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        {% if barrutias is not empty %}
            {% if pager.haveToPaginate %}
                {{ pagerfanta(pager, 'twitter_bootstrap3_translated', {'routeName': 'barrutia_index_paginated'}) }}
            {% endif %}
        {% else %}
            <p>Ez da emaitzarik topatu</p>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function ezabatu (id)
        {
            var r = confirm("Barrutia EZABATU. Ziur zaude? Ekintza honek barrutiaren kale eta eraikin guztiak ezabatuko ditu!!");
            if (r == true)
            {
                document.getElementById(id).submit()
            }else
            {
            }
        };
    </script>
{% endblock %}