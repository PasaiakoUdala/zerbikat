        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">{{ 'messages.datuenbabesa'|trans }}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#" onclick="document.forms['{{ edit_form.vars.name }}'].submit()" class="fa fa-floppy-o"> {{ 'messages.gorde'|trans }}</a></li>
                    <li><a href="{{ path('datuenbabesa_index') }}" class="fa fa-undo"> {{ 'messages.zerrendara'|trans }}</a></li>
