{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Dokumentu-motak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('dokumentumota_new') }}" class="fa fa-plus"> Sarrera berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Mota</th>
                {#<th>Actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for dokumentumotum in dokumentumotas %}
            <tr>
                <td>{{ dokumentumotum.kodea }}</td>
                <td>{{ dokumentumotum.motaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li><a href="{{ path('dokumentumota_edit', { 'id': dokumentumotum.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>{{ form_start(deleteforms[dokumentumotum.id],{'attr': {'id': dokumentumotum.id}}) }}
                                <a href="#" onclick="document.getElementById({{ dokumentumotum.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[dokumentumotum.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
