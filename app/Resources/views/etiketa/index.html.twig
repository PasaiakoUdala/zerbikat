{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Etiketak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('etiketa_new') }}" class="fa fa-plus"> Etiketa berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    {#<h1>Etiketak</h1>#}
    <table class="table">
        <thead>
            <tr>
                <th>Etiketa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for etiketum in etiketas %}
            <tr>
                <td>{{ etiketum.etiketaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                        <li><a href="{{ path('etiketa_edit', { 'id': etiketum.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>{{ form_start(deleteforms[etiketum.id],{'attr': {'id': etiketum.id}}) }}
                                <a href="#" onclick="document.getElementById({{ etiketum.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[etiketum.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
