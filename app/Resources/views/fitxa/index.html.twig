{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
        {% if is_granted('ROLE_USER') %}
        <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand"> Fitxak</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('fitxa_new') }}" class="fa fa-plus"> Fitxa berria</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        {% endif %}
{% endblock %}

{% block body %}
    {{ parent() }}

    <table class="table">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<th>Udala</th>{% endif %}
                <th>Kodea</th>
                <th>Deskribapena</th>
                <th>Saila</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for fitxa in fitxas %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<td>{{ fitxa.udala }}</td>{% endif %}
                <td>{{ fitxa.espedientekodea }}</td>
                <td><a href="{{ path('fitxa_show', { 'id': fitxa.id }) }}">{{ fitxa.deskribapenaeu }}<br>
                {{ fitxa.deskribapenaes }}</a></td>
                <td>
                    {% if fitxa.azpisaila %}
                    {% if fitxa.azpisaila.saila %}{{ fitxa.azpisaila.saila }}{% endif %}
                        <br>{{ fitxa.azpisaila.azpisailaeu }}
                    {% endif %}
                </td>
                <td NOWRAP><ul class="list-inline">

                    <li><a href="{{ path('fitxa_show', { 'id': fitxa.id }) }}" ><i class="fa fa-search"></i></a></li>
                    </li><a href="{{ path('fitxa_pdf', { 'id': fitxa.id }) }}" target="_blank" ><i class="fa fa-file-pdf-o"></i></a></li>

                    {#{% if is_granted('ROLE_ADMIN') %}#}
                        {#{{ form_start(deleteforms[fitxa.id]) }}#}
                        {#<input type="submit" value="Delete" class="fa fa-trash text-danger">#}
                        {#{{ form_end(deleteforms[fitxa.id]) }}#}
                    {#{% endif %}#}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li>{{ form_start(deleteforms[fitxa.id],{'attr': {'id': fitxa.id}}) }}
                            <a href="#" onclick="document.getElementById({{ fitxa.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                        {{ form_end(deleteforms[fitxa.id]) }}</li>
                    {% endif %}

                    </ul></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

