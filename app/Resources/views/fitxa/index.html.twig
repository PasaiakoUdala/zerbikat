{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
        {% if is_granted('ROLE_KUDEAKETA') %}
            <ul class="list-inline pull-right" role="tablist">
                <li><a href="{{ path('fitxa_new') }}" class="btn btn-primary">Fitxa berria</a></li>
            </ul>
        {% endif %}
{% endblock %}

{% block body %}
    {{ parent() }}

    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Deskribapena</th>
                <th>Saila</th>
            </tr>
        </thead>
        <tbody>
        {% for fitxa in fitxas %}
            <tr>
                <td>{{ fitxa.espedientekodea }}</td>
                <td><a href="{{ path('fitxa_show', { 'id': fitxa.id }) }}">{{ fitxa.deskribapenaeu }}<br>
                {{ fitxa.deskribapenaes }}</a></td>
                <td>
                    {% if fitxa.azpisaila %} {{ fitxa.azpisaila.saila }}<br>{{ fitxa.azpisaila }}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('fitxa_show', { 'id': fitxa.id }) }}">Aldatu</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('fitxa_delete', { 'id': fitxa.id }) }}">Ezabatu</a>
                    {% endif %}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

