{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
        {% if is_granted('ROLE_USER') %}
        <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand"> Fitxak</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('fitxa_new') }}" >Fitxa berria</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        {% endif %}
{% endblock %}

{% block body %}
    {{ parent() }}

    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Deskribapena</th>
                <th>Saila</th>
            </tr>
        </thead>
        <tbody>
        {% for fitxa in fitxas %}
            <tr>
                <td>{{ fitxa.espedientekodea }}</td>
                <td><a href="{{ path('fitxa_show', { 'id': fitxa.id }) }}">{{ fitxa.deskribapenaeu }}<br>
                {{ fitxa.deskribapenaes }}</a></td>
                <td>
                    {% if fitxa.azpisaila %} {{ fitxa.azpisaila.saila }}<br>{{ fitxa.azpisaila }}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('fitxa_show', { 'id': fitxa.id }) }}">Aldatu</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('fitxa_delete', { 'id': fitxa.id }) }}">Ezabatu</a>
                    {% endif %}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

