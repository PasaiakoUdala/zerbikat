    <div class="row">
        <div class="col-sm-6">
            <div class="page-header">
                <h3>NON ESKATZEN DA?</h3>
            </div>
            <div>
            {% for k in kanalmotak %}
                {% set aurkitua=0 %}
                <ul>
                {% for kanal in fitxa.kanalak if kanal.kanalmota == k %}
                    {% if aurkitua==0%}
                        <b>{{ k.motaeu }}:</b>
                        {% set aurkitua=1 %}
                    {% endif %}
                    {% if k.esteka %}
                        <li><a href='{{ kanal.estekaeu }}' target="_blank">{{ kanal.izenaeu }}</a></li>
                    {% else %}
                        <li>{{ kanal.izenaeu }}</li>
                    {% endif %}
                {% endfor %}
                </ul>
            {% endfor %}
            </div>

        </div>
        <div class="col-sm-6">
            <div class="page-header">
                <h3>¿DÓNDE SE SOLICITA?</h3>
            </div>
            <div>
                {% for k in kanalmotak %}
                    {% set aurkitua=0 %}
                    <ul>
                        {% for kanal in fitxa.kanalak if kanal.kanalmota == k %}
                            {% if aurkitua==0%}
                                <b>{{ k.motaes }}:</b>
                                {% set aurkitua=1 %}
                            {% endif %}
                            {% if k.esteka %}
                                <li><a href='{{ kanal.estekaes }}' target="_blank">{{ kanal.izenaes }}</a></li>
                            {% else %}
                                <li>{{ kanal.izenaes }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endfor %}
            </div>
        </div>
