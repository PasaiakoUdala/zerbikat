{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Isiltasun-Administratiboak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('isiltasunadministratiboa_new') }}" class="fa fa-plus"> Sarrera berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Isiltasun administratiboaren izaera</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for isiltasunAdministratiboa in isiltasunAdministratiboas %}
            <tr>
                <td>{{ isiltasunAdministratiboa.isiltasuneu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                            <li><a href="{{ path('isiltasunadministratiboa_edit', { 'id': isiltasunAdministratiboa.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>{{ form_start(deleteforms[isiltasunAdministratiboa.id],{'attr': {'id': isiltasunAdministratiboa.id}}) }}
                                <a href="#" onclick="document.getElementById({{ isiltasunAdministratiboa.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[isiltasunAdministratiboa.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
