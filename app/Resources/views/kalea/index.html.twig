{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kalea list</h1>

    <table>
        <thead>
            <tr>
                <th>Izena</th>
                <th>Google</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kalea in kaleas %}
            <tr>
                <td><a href="{{ path('kalea_show', { 'id': kalea.id }) }}">{{ kalea.izena }}</a></td>
                <td>{{ kalea.google }}</td>
                <td>{{ kalea.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('kalea_show', { 'id': kalea.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('kalea_edit', { 'id': kalea.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('kalea_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
