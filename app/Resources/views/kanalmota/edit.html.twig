{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Kanal-motak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#" onclick="document.forms['{{ edit_form.vars.name }}'].submit()">Gorde</a></li>
                    <li><a href="{{ path('kanalmota_index') }}" >Zerrendara itzuli</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    {{ form_start(edit_form) }}
        {#{{ form_widget(edit_form) }}#}

    <div class="row">
        <div class="col-sm-4">
            <div>
                {{ form_label(edit_form.esteka, 'Esteka behar du?: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.esteka) }}
                {{ form_widget(edit_form.esteka, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-sm-4">
            <div>
                {{ form_label(edit_form.motaeu, 'Kanal-mota (eu): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.motaeu) }}
                {{ form_widget(edit_form.motaeu, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-sm-4">
            <div>
                {{ form_label(edit_form.motaes, 'Kanal-mota (es): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.motaes) }}
                {{ form_widget(edit_form.motaes, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="row">
    {% else %}
    <div class="row hidden">
    {% endif %}
        <div class="col-sm-6">
            <div>
                {{ form_label(edit_form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.udala) }}
                {{ form_widget(edit_form.udala, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}
