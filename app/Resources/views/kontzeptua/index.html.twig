{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Kontzeptuak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('kontzeptua_new') }}" class="fa fa-plus"> Kontzeptu berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Kontzeptua</th>
                <th>Kopurua</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for kontzeptua in kontzeptuas %}
            <tr>
                <td>{{ kontzeptua.azpiatala }} -- {{ kontzeptua.kodea }}</td>
                <td>{{ kontzeptua.kontzeptuaeu }}</td>
                <td>{{ kontzeptua.kopurua }} {{ kontzeptua.unitatea }}</td>
                <td>
                    {#<ul>#}
                        {#<li>#}
                            <a href="{{ path('kontzeptua_edit', { 'id': kontzeptua.id }) }}" class="fa fa-pencil"></a>
                        {#</li>#}
                    {#</ul>#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
