{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Kontzeptu-motak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('kontzeptumota_new') }}" class="fa fa-plus"> Mota berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<th>Udala</th>{% endif %}
                <th>Mota (eu)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for kontzeptumotum in kontzeptumotas %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}<td>{{ kontzeptumotum.udala }}</td>{% endif %}
                <td>{{ kontzeptumotum.motaeu }}</td>
                <td NOWRAP class="text-right">
                    <ul class="list-inline">
                            <li><a href="{{ path('kontzeptumota_edit', { 'id': kontzeptumotum.id }) }}" class="fa fa-pencil"></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>{{ form_start(deleteforms[kontzeptumotum.id],{'attr': {'id': kontzeptumotum.id}}) }}
                                <a href="#" onclick="document.getElementById({{ kontzeptumotum.id }}).submit();" ><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[kontzeptumotum.id]) }}</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
