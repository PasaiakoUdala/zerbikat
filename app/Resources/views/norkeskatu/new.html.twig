{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Nork eska dezake</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#" onclick="document.forms['{{ form.vars.name }}'].submit()">Gorde</a></li>
                    <li><a href="{{ path('norkeskatu_index') }}" >Utzi</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}

    {{ form_start(form) }}
        {#{{ form_widget(form) }}#}

    <div class="row">
        <div class="col-sm-6">
            <div>
                {{ form_label(form.norkeu, 'Nork (eu): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(form.norkeu) }}
                {{ form_widget(form.norkeu, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-sm-6">
            <div>
                {{ form_label(form.norkes, 'Nork (es): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(form.norkes) }}
                {{ form_widget(form.norkes, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="row">
    {% else %}
    <div class="row hidden">
    {% endif %}
        <div class="col-sm-6">
            <div>
                {{ form_label(form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(form.udala) }}
                {{ form_widget(form.udala, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>


    {{ form_end(form) }}
{% endblock %}
