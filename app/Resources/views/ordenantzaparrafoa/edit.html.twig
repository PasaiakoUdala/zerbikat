{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Ordenantzaren parrafoak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#" onclick="document.forms['{{ edit_form.vars.name }}'].submit()" class="fa fa-floppy-o"> Gorde</a></li>
                    <li><a href="{{ path('ordenantzaparrafoa_index') }}" class="fa fa-undo"> Zerrendara itzuli</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                {{ form_label(edit_form.ordena, 'Ordena: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.ordena) }}
                {{ form_widget(edit_form.ordena, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-sm-10">
            <div class="form-group">
                {{ form_label(edit_form.ordenantza, 'Ordenantza: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.ordenantza) }}
                {{ form_widget(edit_form.ordenantza, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_label(edit_form.testuaeu, 'Testua (eu): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.testuaeu) }}
                {{ form_widget(edit_form.testuaeu, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_label(edit_form.testuaes, 'Testua (es): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.testuaes) }}
                {{ form_widget(edit_form.testuaes, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="row">
    {% else %}
    <div class="row hidden">
    {% endif %}
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_label(edit_form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.udala) }}
                {{ form_widget(edit_form.udala, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}
