{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Prozedurak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('prozedura_new') }}" class="fa fa-plus"> Prozedura berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Prozeduraeu</th>
                {#<th>Actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for prozedura in prozeduras %}
            <tr>
                <td>{{ prozedura.prozeduraeu }}</td>
                <td><a href="{{ path('prozedura_edit', { 'id': prozedura.id }) }}" class="fa fa-pencil"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
