{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Sailak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#" onclick="document.forms['{{ edit_form.vars.name }}'].submit()">Gorde</a></li>
                    <li><a href="{{ path('saila_index') }}" >Zerrendara itzuli</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    {{ form_start(edit_form) }}
        {#{{ form_widget(edit_form) }}#}
    <div class="row">
        <div class="col-sm-6">
            <div>
                {{ form_label(edit_form.kodea, 'Kodea: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.kodea) }}
                {{ form_widget(edit_form.kodea, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div>
                {{ form_label(edit_form.arduraduna, 'Arduraduna: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.arduraduna) }}
                {{ form_widget(edit_form.arduraduna, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div>
                {{ form_label(edit_form.sailaeu, 'Saila (eu): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.sailaeu) }}
                {{ form_widget(edit_form.sailaeu, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div>
                {{ form_label(edit_form.sailaes, 'Saila (es): ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.sailaes) }}
                {{ form_widget(edit_form.sailaes, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="row">
    {% else %}
    <div class="row hidden">
    {% endif %}
        <div class="col-sm-6">
            <div>
                {{ form_label(edit_form.udala, 'Udala: ', { 'label_attr': {'class': 'control-label'} }) }}
                {{ form_errors(edit_form.udala) }}
                {{ form_widget(edit_form.udala, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}
