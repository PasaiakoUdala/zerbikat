{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Sailak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('saila_new') }}" class="fa fa-plus"> Sail berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Saila</th>
                <th>Arduraduna</th>
            </tr>
        </thead>
        <tbody>
        {% for saila in sailas %}
            <tr>
                <td>{{ saila.kodea }}</td>
                <td>{{ saila.sailaeu }}</td>
                <td>{{ saila.arduraduna }}</td>
                <td><a href="{{ path('saila_edit', { 'id': saila.id }) }}" class="fa fa-pencil"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
