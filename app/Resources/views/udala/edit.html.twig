{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Udalak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#" onclick="document.forms['{{ edit_form.vars.name }}'].submit()" class="fa fa-floppy-o"> Gorde</a></li>
                    <li><a href="{{ path('udala_index') }}" class="fa fa-undo"> Zerrendara itzuli</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <label class="control-label">Kodea:</label>
                {{ form_errors(edit_form.kodea) }}
                {{ form_widget(edit_form.kodea, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="control-label">IKF/CIF:</label>
                {{ form_errors(edit_form.ifk) }}
                {{ form_widget(edit_form.ifk, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Espediente kudeaketa:</label>
                {{ form_errors(edit_form.espedientekudeaketa) }}
                {{ form_widget(edit_form.espedientekudeaketa, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Izena (eu):</label>
                {{ form_errors(edit_form.izenaeu) }}
                {{ form_widget(edit_form.izenaeu, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Izena (es):</label>
                {{ form_errors(edit_form.izenaes) }}
                {{ form_widget(edit_form.izenaes, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Izendapena (eu):</label>
                {{ form_errors(edit_form.izendapenaeu) }}
                {{ form_widget(edit_form.izendapenaeu, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Izendapena (es):</label>
                {{ form_errors(edit_form.izendapenaes) }}
                {{ form_widget(edit_form.izendapenaes, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">LOPD txantilla (eu):</label>
                {{ form_errors(edit_form.lopdeu) }}
                {{ form_widget(edit_form.lopdeu, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">LOPD txantilla (es):</label>
                {{ form_errors(edit_form.lopdes) }}
                {{ form_widget(edit_form.lopdes, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <div class="form-group">
                <label class="control-label">Logoa:</label>
                {{ form_errors(edit_form.logoa) }}
                {{ form_widget(edit_form.logoa, {'attr': {'class': 'c-checkbox'}}) }}
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}
