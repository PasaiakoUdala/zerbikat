{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Udalak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('udala_new') }}" >Udal berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Ifk</th>
                <th>Udala</th>
                <th>Izendapenaeu</th>
            </tr>
        </thead>
        <tbody>
        {% for udala in udalas %}
            <tr>
                <td><a href="{{ path('udala_show', { 'id': udala.id }) }}">{{ udala.kodea }}</a></td>
                <td>{{ udala.ifk }}</td>
                <td>{{ udala.izenaeu }}</td>
                <td>{{ udala.izendapenaeu }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
