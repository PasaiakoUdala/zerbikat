{% extends 'base.html.twig' %}
{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Zerbitzuak</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('zerbitzua_new') }}" class="fa fa-plus"> Zerbitzu berria</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Kodea</th>
                <th>Espediente kudeaketa</th>
                <th>Zerbitzuaeu</th>
            </tr>
        </thead>
        <tbody>
        {% for zerbitzua in zerbitzuas %}
            <tr>
                <td>{{ zerbitzua.kodea }}</td>
                <td>{{ zerbitzua.espedientekudeaketa }}</td>
                <td>{{ zerbitzua.zerbitzuaeu }}</td>
                <td><a href="{{ path('zerbitzua_edit', { 'id': zerbitzua.id }) }}" class="fa fa-pencil"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
