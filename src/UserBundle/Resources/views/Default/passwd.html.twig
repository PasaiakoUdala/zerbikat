{% extends 'base.html.twig' %}

{% block menua %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-lower" data-spy="affix" data-offset-top="5">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">{{ 'messages.erabiltzaileak'|trans }}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#" onclick="document.forms['{{ form.vars.name }}'].submit()" class="fa fa-floppy-o"> {{ 'messages.gorde'|trans }}</a></li>
                    <li><a href="{{ path('users_index') }}" class="fa fa-undo"> {{ 'messages.utzi'|trans }}</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}


{% block body %}
        {{ form_start(form) }}

    <div class="row">

        {% for passwordField in form.password %}
            <div class="col-sm-6">
                <div class="form-field">
                    {#<b>{{ 'messages.pasahitza'|trans }}</b>#}
                    {{ form_label(passwordField, null, { 'label_attr': {'class': 'control-label'} }) }}
                    {{ form_errors(passwordField) }}
                    {{ form_widget(passwordField, {'attr': {'class': 'form-group'}}) }}
                </div>
            </div>
        {% endfor %}
    </div>


    <div class="hidden">
        {{ form_end(form) }}
    </div>


    {% endblock %}
